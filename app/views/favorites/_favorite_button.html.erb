<% if current_user.faving?(novel) %>
    <%= form_for(current_user.favorites.find_by(novel_id: novel.id), html:{method: :delete}) do |f| %>
        <%= hidden_field_tag :novel_id, novel.id %>
        <%= f.submit 'お気に入り解除', class: 'btn btn-warning' %>
    <% end %>
<% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
        <%= hidden_field_tag :novel_id, novel.id %>
        <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
    <% end %>
<% end %>